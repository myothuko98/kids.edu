<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:keepScreenOn="true"
    tools:context="com.freeze.ucsy.kidsedu.Numeric">

    <RelativeLayout
        android:id="@+id/num_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/num_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/number_zero"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_weight="1"
                android:src="@drawable/zero" />

            <ImageView
                android:id="@+id/number_one"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_weight="1"
                android:src="@drawable/one" />

            <ImageView
                android:id="@+id/number_two"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_weight="1"
                android:src="@drawable/two" />

            <ImageView
                android:id="@+id/number_three"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_weight="1"
                android:src="@drawable/three" />

            <ImageView
                android:id="@+id/number_four"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_weight="1"
                android:src="@drawable/four" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/num_l1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/number_five"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_weight="1"
                android:src="@drawable/five" />

            <ImageView
                android:id="@+id/number_six"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_weight="1"
                android:src="@drawable/six" />

            <ImageView
                android:id="@+id/number_seven"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_weight="1"
                android:src="@drawable/seven" />

            <ImageView
                android:id="@+id/number_eight"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_weight="1"
                android:src="@drawable/eight" />

            <ImageView
                android:id="@+id/number_nine"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_weight="1"
                android:src="@drawable/nine" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
