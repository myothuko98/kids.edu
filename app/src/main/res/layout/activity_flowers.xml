                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/calendula"
                    android:layout_width="153dp"
                    android:layout_height="153dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/calendula" />

                <TextView
                    android:id="@+id/calendula_txt"
                    style="@style/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/calendula"
                    android:text="@string/calendula" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flower_l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flower_l3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/candytuft"
                    android:layout_width="153dp"
                    android:layout_height="153dp"
                    android:src="@drawable/candytuft" />

                <TextView
                    android:id="@+id/candytuft_txt"
                    style="@style/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/candytuft"
                    android:text="@string/candytuft" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/cantaloup"
                    android:layout_width="153dp"
                    android:layout_height="153dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/cantaloup" />

                <TextView
                    android:id="@+id/cantalup_txt"
                    style="@style/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cantaloup"
                    android:text="@string/cantaloup" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/cape_primrose"
                    android:layout_width="153dp"
                    android:layout_height="153dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/cape_primrose" />

                <TextView
                    android:id="@+id/cape_primrose_txt"
                    style="@style/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cape_primrose"
                    android:text="@string/cape_primrose" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/caper"
                    android:layout_width="153dp"
                    android:layout_height="153dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/caper" />

                <TextView
                    android:id="@+id/caper_txt"
                    style="@style/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/caper"
